@using WebAppNerdAlert.ViewModels

@{
    ViewData["Title"] = "Home Page";
}


    <div class="position-relative overflow-hidden p-3 p-md-3 m-md-3 text-center bg-gradient-white">
        <div class="col-md-3 p-lg-3 mx-auto my-1">
            <h1 class="display-4 font-weight-normal">NERD ALERT</h1>
            <p class="lead font-weight-normal">For Nerds</p>
            @*<a class="btn btn-outline-secondary" href="#">COMING SOON</a>*@
        </div>
        <div class="product-device box-shadow d-none d-md-block"></div>
        <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
    </div>

     <body class="text-center">
    <form class="form-signin">
        <img class="mb-3" src="https://raw.githubusercontent.com/GiorgioMotorola/WebAppNerdAlert/master/Images/nerdglasses.jpg" alt="" width="600" height="230">
      <h1 class="h3 mb-3 font-weight-normal"></h1>    
      <div class="checkbox mb-3">       
      </div>
     @* <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>*@

        @*<input type="button" onclick="location.href='Account/Login';" value="LOGIN" />
        <input type="button" onclick="location.href='Account/Register';" value="REGISTER" />*@
    </form>
  </body>

<section>
    <div class="container">
        @if (Model.Hobbies == null)
        {
            <h1 class="fw-light">
                There are no Hobby Groups in your area! <a asp-area="" asp-controller="Account"
                                                        asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-center">
                    <h3>Find Hobby Groups near @Model.City, @Model.State</h3>
                    <a href="Hobby" class="btn btn-outline-primary">View all</a>
                </div>
               
            </div>
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model.Hobbies)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <a href="#">
                                <img class="card-img-top" src="@item.Image" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h4 class="card-title">@item.Title</h4>
                                    <p class="card-text text-body">@item.Description</p>
                                </a>
                            </div>
                            <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                <div class="text-small">
                                    <ul class="list-inline">
                                        <li class="list-inline-item"><i class="icon-heart"></i> 221</li>
                                        <li class="list-inline-item"><i class="icon-message"></i> 14</li>
                                    </ul>
                                </div>
                                <div class="dropup">
                                    <a type="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary">View</a>
                                    <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="SidekickButton">
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Share</a>
                                        <a class="dropdown-item" href="#">Comment</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

    
